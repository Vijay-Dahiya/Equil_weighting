<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/Line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="300dp"/>
    <TextView
        android:id="@+id/Nr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/nrupul"
        android:gravity="center"
        android:textSize="@dimen/sp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Pr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/Line"/>


    <TextView
        android:id="@+id/Pr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/prateek"
        android:gravity="center"
        android:textSize="@dimen/sp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/back"
        app:layout_constraintStart_toEndOf="@+id/Nr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/Line"
        />


    <TextView
        android:id="@+id/Aman"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/aman"
        android:gravity="center"
        android:textSize="@dimen/sp_30"
        android:background="@color/back"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Albert"

        />

    <TextView
        android:id="@+id/Albert"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/albert"
        android:gravity="center"
        android:textSize="@dimen/sp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@color/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Line"
        app:layout_constraintBottom_toTopOf="@+id/Aman"
        />








</androidx.constraintlayout.widget.ConstraintLayout>